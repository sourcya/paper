    "preact/jsx-runtime": "npm:preact@^10.19.0/jsx-runtime",
    "esbuild": "npm:esbuild@^0.20.0",
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.10.3",
    "@std/fs/copy": "jsr:@std/fs@^1/copy",
    "@sourcya/paper": "../mod.ts",
    "@sourcya/paper/preact": "../preact/mod.ts",
    "@sourcya/paper/preact/css": "../preact/css/mod.ts"
